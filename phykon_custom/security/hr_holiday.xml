<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>
	<!-- Leave Approver group -->
    <record id="group_leave_approver" model="res.groups">
            <field name="name">Approver</field>
			<field name="category_id" ref="base.module_category_hr_holidays"/>
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
    </record>
		
				<!-- Leave ir rule for Approver -->
	<record id="leave_approver_rule" model="ir.rule">
        <field name="name">Leave Approver</field>
        <field name="model_id" ref="hr_holidays.model_hr_holidays"/>
        <field name="domain_force">['|',('department_id.manager_id.user_id','=', user.id), '|', ('employee_id.parent_id.parent_id.user_id','=', user.id),'&amp;',('employee_id.user_id','!=', user.id),('employee_id.parent_id.user_id','=', user.id)]</field>	   
		<field name="groups" eval="[(4,ref('group_leave_approver'))]"/>	
		<field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
		<field eval="0" name="perm_create"/>
		<field eval="0" name="perm_unlink"/>
	</record>
	 

				<!-- Leave detail ir rule for Approver -->
	<record id="leave_Detail_approver_rule" model="ir.rule">
        <field name="name">Leave Detail Approver</field>
        <field name="model_id" ref="resource.model_resource_calendar_leaves"/>     
	    <field name="domain_force">[(1, '=', 1)]</field>	  
		<field name="groups" eval="[(4,ref('group_leave_approver'))]"/>	
		<field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
		<field eval="1" name="perm_create"/>
		<field eval="0" name="perm_unlink"/>
	</record>
	 
    </data>
</odoo>