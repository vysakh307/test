        <field name="model_id" ref="model_hr_applicant"/>
        <field name="domain_force">['|',('department_id.manager_id.user_id','=', user.id),('department_id.manager_id.parent_id.user_id','=', user.id)]</field>
		<field name="groups" eval="[(4,ref('group_ops_user'))]"/>
		<field eval="0" name="perm_unlink"/>
