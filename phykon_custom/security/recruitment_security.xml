<?xml version="1.0" encoding="utf-8"?>

<odoo>


  <record id="group_ops_user" model="res.groups">
        <field name="name">Ops Manager</field>
    	<field name="category_id" ref="base.module_category_hr_recruitment"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will be able to approve document created by employees.</field>
    </record>
	



    <record id="group_ops_manager" model="res.groups">
        <field name="name">Ops AVP</field>
		<field name="category_id" ref="base.module_category_hr_recruitment"/>
        <field name="implied_ids" eval="[(4, ref('group_ops_user'))]"/>
        <field name="comment">the user will be able to create job position and approve document created by employees.</field>
    </record>


	<record id="ops_manager_recruitment" model="ir.rule">
        <field name="name">Ops Recruitment</field>
        <field name="model_id" ref="hr.model_hr_job"/>
        <field name="domain_force">['|',('department_id.manager_id.user_id','=', user.id),('department_id.manager_id.parent_id.user_id','=', user.id)]</field>
		<field name="groups" eval="[(4,ref('group_ops_user'))]"/>
		<field eval="0" name="perm_unlink"/>
		<field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
		<field eval="0" name="perm_create"/>
	</record>
</odoo>