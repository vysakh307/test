<?xml version="1.0" encoding="utf-8"?>

<odoo>

	<!--  see own timesheet only -->
	<record id="User_see_own_timesheet_rule" model="ir.rule">
        <field name="name">See Own Timesheet </field>
        <field name="model_id" ref="analytic.model_account_analytic_line"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
		<field name="groups" eval="[(4,ref('base.group_user'))]"/>
		<field eval="1" name="perm_read"/>
		
	</record>


  
	
	
	<!-- time sheet group for Project Manager -->
	<record id="group_project_manager" model="res.groups">
        <field name="name">Project Manager</field>
		<field name="category_id" ref="base.module_category_hr_timesheet"/>
        <field name="implied_ids" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        <field name="comment">the user will be able to view timesheets and reports.</field>
    </record>

	
		<!-- time sheet ir rule for Project Manager -->
	<record id="project_manager_timesheet_rule" model="ir.rule">
        <field name="name">Project Manager Rule</field>
        <field name="model_id" ref="analytic.model_account_analytic_line"/>
        <field name="domain_force">['|',('task_id.project_id.user_id','=', user.id),('task_id.project_id.user_id.parent_id.user_id','=', user.id)]</field>
		<field name="groups" eval="[(4,ref('group_project_manager'))]"/>	
		<field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
		<field eval="0" name="perm_create"/>
		<field eval="0" name="perm_unlink"/>
	</record>



</odoo>