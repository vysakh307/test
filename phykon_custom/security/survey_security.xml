<?xml version="1.0" encoding="utf-8"?>

<odoo>

		<!-- OPS Manager group in survey -->
	<record id="group_survey_ops_user" model="res.groups">
        <field name="name">Ops Manager</field>
    	<field name="category_id" ref="base.module_category_survey"/>
        <field name="implied_ids" eval="[(4, ref('survey.group_survey_user'))]"/>
        
    </record>

	
	<!-- OPS Manager rule in survey -->
	<record id="survey_ops_manager_rule" model="ir.rule">
        <field name="name">Ops Manager</field>
        <field name="model_id" ref="survey.model_survey_user_input"/>
		<field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('group_survey_ops_user'))]"/>
        <field eval="1" name="perm_read"/>
		<field eval="1" name="perm_write"/>
	</record>
	
	
	
</odoo>