	<!-- Approver rule in Attendance -->
	<record id="attendance_approver_rule" model="ir.rule">
        <field name="name">Attendance Approver</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
		<field name="domain_force">['|',('department_id.manager_id.user_id','=', user.id),('department_id.manager_id.parent_id.user_id','=', user.id)]</field>
        <field name="groups" eval="[(4,ref('group_attendance_approver'))]"/>
        <field eval="1" name="perm_read"/>
		<field eval="1" name="perm_write"/>
		<field eval="0" name="perm_create"/>
		<field eval="0" name="perm_unlink"/>		
	</record>
	
	
		<!-- Attendance user self view rule -->
	<record id="attendance_base_user_rule" model="ir.rule">
        <field name="name">Attendance User</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
		<field name="domain_force">['|',('employee_id.user_id','=', user.id),'|',('employee_id.department_id.manager_id.user_id','=', user.id),('employee_id.department_id.manager_id.parent_id.user_id','=', user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        <field eval="1" name="perm_read"/>
		<field eval="0" name="perm_write"/>
		<field eval="0" name="perm_create"/>
		<field eval="0" name="perm_unlink"/>		
	</record>
	
	<!-- self shift view rule -->
	<record id="shift_base_user_rule" model="ir.rule">
        <field name="name">Attendance Shift User</field>
        <field name="model_id" ref="phykon_custom.model_hr_shift_schedule_complete"/>
		<field name="domain_force">['|',('employee_id.user_id','=', user.id),'|',('employee_id.department_id.manager_id.user_id','=', user.id),('employee_id.department_id.manager_id.parent_id.user_id','=', user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        <field eval="1" name="perm_read"/>
		<field eval="0" name="perm_write"/>
		<field eval="0" name="perm_create"/>
		<field eval="0" name="perm_unlink"/>		
	</record>
	
	
		<!-- MIS rule in Attendance -->
	<record id="attendance_mis_rule" model="ir.rule">
        <field name="name">Attendance MIS</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
		<field name="domain_force">[(1,'=', 1)]</field>
        <field name="groups" eval="[(4,ref('group_attendance_mis'))]"/>
        <field eval="1" name="perm_read"/>
		<field eval="0" name="perm_write"/>
		<field eval="0" name="perm_create"/>
		<field eval="0" name="perm_unlink"/>		
	</record>
	

	
</odoo>