<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
  <data>

  	 <!-- "in_recruitment" as default search option in Recruitment-->
	 
	<record model="ir.actions.act_window" id="hr_recruitment.action_hr_job">
        <field name="name">Job Positions</field>
        <field name="res_model">hr.job</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="hr_recruitment.view_hr_job_kanban"/>
        <field name="context">{"search_default_in_recruitment": 1}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
              Click here to create a new job position.
          </p><p>
              Once a job position is created, you can track related applications
              and manage the recruitment process.
          </p>
        </field>
    </record>
	
  <!-- Target Date field In Recruitment-->
    <record id= "hr_job_recruitment_targetDate_form_view" model= "ir.ui.view">
		<field name= "inherit_id" ref="hr.view_hr_job_form"/>
		<field name= "model">hr.job</field>
		<field name= "arch" type="xml">
			<field name= "no_of_recruitment" position="after">
						<field name="target_date"/>   
			</field>
		</field>
	</record>

 <!-- Dept Survey Date field In Recruitment-->
    <record id= "hr_job_recruitment_dept_survey_form_view" model= "ir.ui.view">
		<field name= "inherit_id" ref="hr.view_hr_job_form"/>
		<field name= "model">hr.job</field>
		<field name= "arch" type="xml">
			<field name= "address_id" position="before">
						<field name="dept_survey_id"/>   
			</field>
		</field>
	</record>






	<record id="hr_recruitment.menu_hr_recruitment_root" model="ir.ui.menu">
        <!-- Use the special many2many value syntax to add a child record,
             and the `ref()` method to resolve the group XML ID -->
        	<field name="groups_id" eval="[(4,ref('phykon_custom.group_ops_user'))]"/>
    </record>

		
		<!-- recruitment configuration menu visibility-->
	<record id="hr_recruitment.menu_hr_recruitment_configuration" model="ir.ui.menu">
        	<field name="groups_id" eval="[(4,ref('hr.group_hr_manager'))]"/>
    </record>
		
		
	 <record id="view_hr_employee_inherited_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherited.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
			<xpath expr="//div[@name='button_box']" position="inside">
			<!-- <xpath expr="//button[@name='action_emp_relatives_list']" position="replace">
             </xpath>-->
			 <button name="hr_employee.action_emp_relatives_list" type="action" position="replace">
                 
                </button>
			 
			</xpath>
        </field>
    </record>	
		

