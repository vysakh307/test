<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="hr_timesheet_sheet_form_inherit" model="ir.ui.view">
        <field name="name">hr_timesheet.sheet.form.inherit</field>
        <field name="model">hr_timesheet.sheet</field>
		<field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_timesheet_done']" position="attributes">
               <attribute name="groups">phykon_custom.group_project_manager</attribute>
            </xpath>
			<xpath expr="//button[@name='action_timesheet_refuse']" position="attributes">
               <attribute name="groups">phykon_custom.group_project_manager</attribute>
            </xpath>
		</field>
    </record>
 
	<record id="hr_timesheet.menu_timesheets_reports" model="ir.ui.menu">
        	<field name="groups_id" eval="[(4,ref('phykon_custom.group_project_manager'))]"/>
    </record>
		
		
	<record id="hr_timesheet.menu_timesheets_reports_timesheet" model="ir.ui.menu">
        	<field name="groups_id" eval="[(4,ref('phykon_custom.group_project_manager'))]"/>
    </record>
	
	<record id="hr_timesheet_sheet.menu_hr_to_approve" model="ir.ui.menu">
        	<field name="groups_id" eval="[(4,ref('phykon_custom.group_project_manager'))]"/>
    </record>	



</odoo>