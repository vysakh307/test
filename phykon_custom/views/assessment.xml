<odoo>
    <data>
        <record id="assessment_config_tree_view" model="ir.ui.view">
            <field name="name">assessment.config.tree.view</field>
            <field name="model">assessment.config</field>
            <field name="arch" type="xml">
                <tree>
                   <field name="assessment_seq"/>
                   <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="assessment_config_form_view" model="ir.ui.view">
            <field name="name">assessment.config.form.view</field>
            <field name="model">assessment.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h4>
                            <field name="assessment_seq" readonly="1"/>
                        </h4>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <notebook>
                        <page string="Assessments">
                            <field name="assessment_ids">
                                <tree editable="bottom">
                                    <field name="job_id" required="1"/>
                                    <field name="score" required="1"/>
                                    <field name="comment"/>
                                </tree>
                                <form>
				<group>
                                    <field name="job_id" readonly="1"/>
                                    <field name="score" readonly="1"/>
                                    <field name="comment" readonly="1"/>
				</group>
                                </form>
                            </field>
                        </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
		<record id="seq_assessment_config" model="ir.sequence">
            <field name="name">Assessment</field>
            <field name="code">assessment.config</field>
            <field name="prefix">ASMT</field>
            <field name="padding">0</field>
		 </record>
        <record id="assessment_action" model="ir.actions.act_window">
            <field name="name">Assessments</field>
            <field name="res_model">assessment.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
		<!-- Assessment menu**************groups="base.group_no_one*********************-->		
		 <menuitem
            id="menu_hr_recruitment_assessment"
            name="Assessments"
            parent="hr_recruitment.menu_hr_recruitment_configuration"
            action="assessment_action"
            sequence="5" groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"/>
    </data>
</odoo>

