    <!-- explicit Generate shift schedule wizard view definition -->
        <record model="ir.ui.view" id="hr_employee_shift_generate_schedule_form">
            <field name="name">hr_employee_shift_generate_schedule form</field>
            <field name="model">hr.shift.generate</field>
            <field name="arch" type="xml">
                <form  create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="hr_department"/>
                            </group>
							<group>
                                <field name="hr_shift"/>
                            </group>
                        </group>
						 <group>
                                <field widget="many2many_tags" name="employee_ids"/>
                           </group>
                        <group>
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <footer>
                            <button string="Assign" name="action_schedule_shift" type="object"
                                class="oe_highlight"/>
                            <button string="Cancel" special="cancel"
                                class="oe_link"/>
                        </footer>
                    </sheet>

                </form>
            </field>
        </record>

	<record id="attendance_sheet_datewise_form_view" model="ir.ui.view">
        <field name='name'>attendance.sheet.datwise.form.view</field>
        <field name='model'>hr.attendance.datewise</field>
        <field name='arch' type='xml'>
            <form>
				    <header> 
                    <button name="get_attendance" string="Get Attendance" type="object" class="oe_highlight" />
                    
                </header>
                <sheet>
                
                    <group col="2">
                        <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" />
                                <field name="date_to" />
                            
                            </div>
                    </group>
                   
                    <notebook>
                        <page string="Attendances" name='Attendances_line'>
                            <field name="attendance_sheet_ids" >
                                <tree create="0">
                          
                                    
                                </tree>
                            </field>
                        </page>
                        
                    </notebook>
                </sheet>
              
            </form>
        </field>
    </record>
	
	<record id="attendance_sheet_datewise_tree_view" model="ir.ui.view">
        <field name="name">attendance.sheet.datwise.tree.view</field>
        <field name="model">hr.attendance.datewise</field>
        <field name="arch" type="xml">
            <tree>
               
                <field name="date_from" string="Date From"/>
                <field name="date_to" string="Date To"/> 
            </tree>
        </field>
     </record>



