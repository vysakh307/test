        <record id="view_form_hr_shift_schedule_complete" model="ir.ui.view">
            <field name="name">HR Shift Schedule Form</field>
            <field name="model">hr.shift.schedule.complete</field>
            <field name="arch" type="xml">
                <form string="Employee Shift">
                    <sheet>
                        <h3>
                            <field name="name"/>
                        </h3>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="hr_shift_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="start"/>
                                <field name="stop"/>
                                <field name="duration"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_hr_shift_schedule_complete" model="ir.ui.view">
            <field name="name">HR Shift Schedule tree</field>
            <field name="model">hr.shift.schedule.complete</field>
            <field name="arch" type="xml">
                <tree string="Employee Shift">
                    <field name="employee_id"/>
                    <field name="start"/>
                    <field name="stop"/>
                    <field name="duration"/>
                    <field name="hr_shift_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_calendar_hr_shift_schedule_complete" model="ir.ui.view">
            <field name="name">HR Shift Schedule Calendar</field>
            <field name="model">hr.shift.schedule.complete</field>
            <field name="arch" type="xml">
                    <!-- readonly_form_view_id="%(calendar.view_calendar_event_form_popup)s" -->
                <calendar string="Meetings" date_start="start" date_stop="stop" date_delay="duration"
                    color="employee_id" mode="month" quick_add="False">
                    <field name="name"/>
                    <!-- <field name="partner_ids" write_model="calendar.contacts" write_field="partner_id" avatar_field="image_small"/> -->
                    <!-- <field name="is_highlighted" invisible="1"/> -->
                </calendar>
            </field>
        </record>
		
