<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="crm_case_form_view_job_inherit_dept" model="ir.ui.view">
        <field name="name">hr.applicant.form.inherit.dept</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_makeMeeting']" position="before">
                <button name="action_start_dept_survey"
                    class="oe_stat_button"
                    icon="fa-user"
                    type="object"
                    help="Answer related job question"
					groups="phykon_custom.group_ops_user"
                    context="{'dept_survey_id': dept_survey_id}"
                    attrs="{'invisible':[('dept_survey_id','=',False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Start Dept</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
				<button name="action_print_dept_survey"
                    class="oe_stat_button"
                    icon="fa-print"
                    type="object"
					groups="phykon_custom.group_ops_user"
                    help="Print interview report"
                    attrs="{'invisible':[('dept_survey_id','=',False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Print Dept</span>
                        <span class="o_stat_text">Interview</span>
                    </div>
                </button>
              
            </xpath>
			    <xpath expr="//field[@name='job_id']" position="before">
                <field name="dept_survey_id" invisible="1"/>
                <field name="dept_response_id" invisible="1"/>
            </xpath>
          
        </field>
    </record>
	
	  <record id="crm_case_form_view_job_inherit_inherit" model="ir.ui.view">
        <field name="name">hr.applicant.form.inherit.inherit</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment_survey.crm_case_form_view_job_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_start_survey']" position="attributes">
               <attribute name="groups">hr.group_hr_manager,hr.group_hr_user</attribute>
            </xpath>
			
			 <xpath expr="//button[@name='action_print_survey']" position="attributes">
               <attribute name="groups">hr.group_hr_manager,hr.group_hr_user</attribute>
            </xpath>
		

         
        </field>
    </record>



</odoo>