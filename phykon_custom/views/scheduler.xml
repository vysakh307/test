<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data noupdate="1">
        <record id="ir_cron_scheduler_webpin_enable_action" model="ir.cron">
            <field name="name">Web Pin Enable</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
			<field name="active" eval="True"/>
			<field name="model_id" ref="model_hr_applicant"/>
			<field name="doall" eval="True"/>
			<field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 13:00:00')" />
			<field name="state">code</field>
			<field name="code">
				model.process_Webpin_enable_scheduler()
			</field>
			
			
		</record>

		 
		
		<record id="ir_cron_scheduler_webpin_disable_action" model="ir.cron">
            <field name="name">Web Pin Disable</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
			<field name="active" eval="True"/>
			<field name="model_id" ref="model_hr_applicant"/>
			<field name="doall" eval="True"/>
			<field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 14:30:00')" />
			<field name="state">code</field>
			<field name="code">
				model.process_Webpin_disable_scheduler()
			</field>
			
		</record>

  </data>
</odoo>