<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
  <data>  

	<!-- department as many2many widget -->
	<record id="hr_exit_checklist_form_inherit_view" model="ir.ui.view">
            <field name="name">hr.exit.checklist.form.inherit.view</field>
            <field name="model">hr.exit.checklist</field>
			<field name="inherit_id" ref="hr_exit_process.hr_exit_checklist_form_view" />
        <field name="arch" type="xml">
			<xpath expr="//field[@name='responsible_user_id']" position="after">
			<field name="department_id" widget="many2many_tags"/>
            </xpath>
		</field>
        </record>
		
		<!-- Employee Name in tree view -->
		<record id="hr_exit_line_tree_nherit_view_id" model="ir.ui.view">
            <field name="name">hr.exit.line.tree.inherit.view</field>
            <field name="model">hr.exit.line</field>
			<field name="inherit_id" ref="hr_exit_process.hr_exit_line_tree_view_id" />
            <field name="arch" type="xml">
                 <tree create="0">
                      <field name="employee_id"/>
                 </tree>
            </field>
        </record>
		
  </data>
</odoo>